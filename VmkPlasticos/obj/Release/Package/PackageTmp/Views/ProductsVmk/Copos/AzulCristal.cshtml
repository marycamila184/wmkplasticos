                                        <img src="~/Content/images/products/copo-azulcristal.jpg" class="lazyOwl" alt="" data-src="/Content/images/products/copo-azulcristal.jpg" style="display: block;">
                                        <span class="magnifier"></span>
                                    </div>
                                </a>
                                <div class="image-caption text-center">
                                    <h3><a href="@Url.Action(actionName: "Index", controllerName: "ProductsVmk", routeValues: new { product = "AzulCristal", line="Copos"})">Copos - Azul Cristal</a></h3>
                                </div><!-- image caption -->
                            </div>
                            <div class="item">
                                <a href="@Url.Action(actionName: "Index", controllerName: "ProductsVmk", routeValues: new { product = "TransparenteCristal", line="Copos"})">
                                    <div class="entry">
                                        <img src="~/Content/images/products/copo-transparentecristal.jpg" class="lazyOwl" alt="" data-src="/Content/images/products/copo-transparentecristal.jpg" style="display: block;">
