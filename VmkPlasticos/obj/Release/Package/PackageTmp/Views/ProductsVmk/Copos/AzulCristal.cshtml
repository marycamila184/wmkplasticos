                                </div><!-- image caption -->
                            </div>
                            <div class="item">
                                <a href="@Url.Action(actionName: "Index", controllerName: "ProductsVmk", routeValues: new { product = "VermelhoCristal", line="Copos"})">
                                    <div class="entry">
                                        <img src="~/Content/images/products/copo-vermelhocristal.jpg" class="lazyOwl" alt="" data-src="/Content/images/products/copo-vermelhocristal.jpg" style="display: block;">
                                        <span class="magnifier"></span>
                                    </div>
                                </a>
                                <div class="image-caption text-center">
                                    <h3><a href="@Url.Action(actionName: "Index", controllerName: "ProductsVmk", routeValues: new { product = "VermelhoCristal", line="Copos"})">Copos - Vermelho Cristal</a></h3>
                                </div><!-- image caption -->
                            </div>
                        </div>
                    </div>
